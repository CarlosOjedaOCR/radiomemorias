  </div>  <div class="scroll-bottom"><div>OCR | Radio Net | Radio Antena Caliente | Radio Memorias</div></div>  <script>
    const audio = document.getElementById('audio');
    const vinilo = document.getElementById('vinilo');

    function toggleSpin() {
      if (audio.paused) {
        vinilo.classList.remove('gira');
      } else {
        vinilo.classList.add('gira');
      }
    }

    audio.addEventListener('play', toggleSpin);
    audio.addEventListener('pause', toggleSpin);

    window.onload = () => {
      if (!audio.paused) {
        vinilo.classList.add('gira');
      }

      const logos = document.querySelectorAll('.logos img');
      const observer = new IntersectionObserver(entries => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
            observer.unobserve(entry.target);
          }
        });
      }, {
        threshold: 0.1
      });

      logos.forEach(logo => observer.observe(logo));
    };
  </script></body>
